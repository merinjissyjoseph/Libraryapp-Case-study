<body>
    
     <div class="container  mt-5" >
        <h1>Add new Author</h1>
        <form action="/newauthor" method="post">
           
            <div class="form-group">
                <label for="exampleInputEmail1">Author</label>
                <input type="text" name="name" placeholder="name of the Author"  class="form-control" id="author1" >
                
            </div>
            <div class="form-group">
                <label for="exampleInputauthor">Info</label>
                <input type="text" name="description"  placeholder="add more details"   class="form-control" id="desc1" >
            </div>
            
            <div class="form-group">
                <label for="exampleInputgenre">Image</label>
                <input type="file"  name="image"  accept="image/png, image/jpeg" id = "image1">
            </div>
            
            <button type="submit" class="btn btn-primary">Add to my library</button>
        </form>
    </div>

</body>
