            <a href="/" class="navbar-brand">My Library</a>
          </div>
          <nav class="collapse navbar-collapse" role="navigation">
            <ul class="nav navbar-nav">
              <%for (i=0;i<nav1.length;i++){%>
              <li>
                <a href="<%=nav1[i].link%>"><%=nav1[i].name%></a>
              </li>
           <%}%>
            </ul>
            
          </nav>
        </div>
      </header>
    <div class="container mt-5">
        <h1>Register Account</h1>
        <form action="/signup" method="post">
          <div class="form-group">
            <label >Username</label>
            <input type="text" name="uname" class="form-control" id="fname" required>
            
        </div>
        
     
        <div class="form-group">
                <label >Phone number</label>
                <input type="number" name="pnumber" class="form-control" id="pnumber" required>
                
            </div>
            <div class="form-group">
              <label >Email address</label>
              <input type="email" name="email" class="form-control" id="exampleInputEmail1" required>
              
          </div>
            <div class="form-group">
                <label >Password</label>
                <input type="password" name="password" class="form-control" id="exampleInputPassword1" required>
            </div>
            <div class="form-group">
                <label >Confirm Password</label>
                <input type="password" name="password1" class="form-control" id="exampleInputPassword2" required>
            </div>
            <h3 name="message"></h3>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</body>
</html>









